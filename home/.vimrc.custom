" Show hidden characters
set list
set listchars=tab:▸\ ,trail:·

" <leader>W - remove trailing whitespace
nnoremap <leader>W :%s/\s\+$//<cr>:let @/=''<CR>
nnoremap <leader>> :%s/:\([^ ]*\)\(\s*\)=>/\1:/g<CR>

" Disable mapping for opening man page for current line.
" Always seem to hit this when trying to hit ctlr-k.
:map K <Nop>

" Solarized
set background=dark
colorscheme molokai
let g:rehash256 = 1

source ~/.vim/plugged/vim-colors-solarized/autoload/togglebg.vim

